import random
n=random.randint(1,100)
c=0
print('Привет, я загадал число от 1 до 100. ')
print('Попробуй угадать его, а я буду подсказывать')
print('Давай начнем!')
while True:
    print('Попытка ', c+1   )
    g=int(input('Введи число   '))
    c=c+1
    if g<n:
        print('Не угадал, возьми число больше')
    elif g>n:
        print('Не угадал, возьми число меньше')
    else:
        print('Молодец! Ты угадал! заданное число было:  ',n)
        print('Попыток было использовано:  ',c)
        break
print('Спасибо за игру')
